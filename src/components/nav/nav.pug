-
  const NAV_ITEM = [
  {ITEM_NAME:"home"},
  {ITEM_NAME:"about us"},
  {ITEM_NAME:"services",ITEM_EXPANDED:true},
  {ITEM_NAME:"careers"},
  {ITEM_NAME:"news"},
  {ITEM_NAME:"documentation"}] 

  

mixin nav(options) 
  -
    var navItemClassName="nav__item"
    navItemClassName+=options.isDefault ? " nav__item_default":""

  nav(class="nav")
    - for (var i = 0; i < NAV_ITEM.length; i++)
      if !NAV_ITEM[i].ITEM_EXPANDED
        div(class=navItemClassName)
          a(class="nav__link") #{NAV_ITEM[i].ITEM_NAME}
      else 
        div(class=navItemClassName + " nav__item_expanded")
          a(class="nav__link") #{NAV_ITEM[i].ITEM_NAME}
          div(class="nav__expanded")
          

