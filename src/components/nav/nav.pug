-
    const NAV_ITEM = [{name:"home",href:"#"},
                      {name:"about us",href:"#"},
                      {name:"services",expanded:true,href:"#"},
                      {name:"careers",href:"#"},
                      {name:"news",href:"#"},
                      {name:"documentation",href:"#"}] 

mixin nav(options)
    -
        const currArray = options || NAV_ITEM
        var navItemClassName="nav__item"
        //- navItemClassName+=options.isDefault ? " nav__item_default":"

    nav(class="nav")
        - for (let i = 0; i < currArray.length; i++)
            if !currArray[i].expanded
                div(class=navItemClassName)
                a(class="nav__link" title=`${currArray[i].name}` href=`${currArray[i].href}`) #{currArray[i].name}
            else 
                div(class=navItemClassName + " nav__item_expanded")
                a(class="nav__link" title=`${currArray[i].name}` href=`${currArray[i].href}`) #{currArray[i].name}
                div(class="nav__expanded")    