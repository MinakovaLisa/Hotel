include ../logo/logo.pug
include ../nav/nav.pug
include ../button/button

mixin header({isLogged=true,text_login})
    -
        var headerClassName = ""
        var menuClassName = "menu"
        const USER_NAME="cosmin negotia"
        
  
    header(class="header")
        +logo()
        div(class = menuClassName)
            +nav({isDefault:true})
            if !isLogged
              +button({isBordered:true,title:text_login ||"login",isTextColored:true,isHeaderButton:true})
              +button({isColored:true,title:"register",isHeaderButton:true})  
            else
              p(class="user-name") #{USER_NAME}         