mixin footer(option)
    footer(class="footer")
        section(class="footer__item footer__widget")
            div(class="widget__logo widget")
                +logo()
                p(class="widget__desc widget__text") #{WIDGET_DESC.text}
            div(class="widget__wrap")
                - for (var i = 0; i < WIDGET_ITEM.ITEMS.length; i++)
                    div(class=` widget__group widget`)
                        span(class="widget__title") #{WIDGET_ITEM.ITEMS[i].TITLE}
                        for item in WIDGET_ITEM.ITEMS[i].LINKS
                            a(class="widget__link widget__text widget__text_link" href=`${item.HREF}`) #{item.NAME}
            div(class="widget__subscribe widget")
                span(class="widget__title") #{WIDGET_SUBSCRIBE.TITLE}
                p(class="widget__desc widget__text") #{WIDGET_SUBSCRIBE.TEXT}                