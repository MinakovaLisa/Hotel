include ../button/button
include ../arrow/arrow


mixin date-range-picker({type,titleGroup:[title_1,title_2]=[],title=""})
    div(class="arrow__left")
        +arrow({isColored:true})
    div(class="arrow__right")
        +arrow({isColored:true})
    if type==="group-range"       
        div(class="calender_range")
            div(class="range__wrap")
                h3(class="calendar__caption") #{title_1}
                input(class="entry-range" type="text" placeholder="дд.мм.гг" )
            div(class="range__wrap")    
                h3(class="calendar__caption" ) #{title_2}
                input(class="departure-range" type="text" placeholder="дд.мм.гг") 
    else if type==="static-range"  
        div(class="calendar_static")   
    else if type==="filter-range"
        div(class="calendar_filter")
            div(class="range__wrap range__wrap_filter")  
                h3(class="calendar__caption") #{title}
                input(class="filter-range" placeholder="дд.мм.гг")
    else if type==="masked"
        div(class="calendar_masked")  
                h3(class="calendar__caption") #{title}
                input(class="calendar__input" placeholder="дд.мм.гг")                       
       
                  