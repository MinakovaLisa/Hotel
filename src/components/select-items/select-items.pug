include ../button/button

mixin select-items({id,text,size,items,title,hasControlButtons,btn_clear,btn_apply,hasMenu})
    -
        const defaultItems=[{text:"Item"},{text:"Item"},{text:"Item"}]
        const currentItems=items||defaultItems
    div(class="select-items")    
        h3(class="select-items__title") #{text}
        div(class=`iqdropdown iqdropdown__select iqdropdown_${size}` id=`${id}`)
            p(class=`iqdropdown-selection iqdropdown__text ${id}-title`) #{title}
            div(class="iqdropdown-menu" id="iqdropdown-menu__select")
                if hasMenu 
                    - for (let i=0;i<items.length;i++)
                        div(class="iqdropdown-menu-option" data-id=`${id+i}`)
                            p(class="iqdropdown-item") #{items[i].text}
                    if hasControlButtons       
                        div(class="iqdropdown-menu-wrap")
                            +button(btn_clear)       
                            +button(btn_apply)
