
include ../../../components/logo-icon/logo-icon.pug
include ../../../components/header/header.pug
include ../../../components/button/button.pug
include ../../../components/footer/footer.pug

-
    const header_unLogged = {isLogged:false}
    const header_logged = {isLogged:true}
    const footer_regular = {isCreative:false}
    const footer_creative = {isCreative:true}


doctype html
html
    head
        meta(charset = 'utf-8')
        meta(name='viewport', content="initial-scale=1.0, width=device-width")
        title
            headersAndFooters
    body 
            +logo-icon({isColored:false})
            div(class="headersAndFooters headersAndFooters__wrap")
                +header(header_unLogged) 
                +header(header_logged)        
                +footer(footer_regular)
                +footer(footer_creative)