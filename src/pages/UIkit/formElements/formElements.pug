include ../../../components/textField/textField.pug
include ../../../components/logo-icon/logo-icon.pug
include ../../../components/select-item/select-item.pug
doctype html
html
    head
        meta(charset = 'utf-8')
        meta(name='viewport', content="initial-scale=1.0, width=device-width")
        title 
            FormElements
    body
        .container
            +logo-icon({isColored:false})
            div(class="transparent-wrap")     
            div(class="formElements formElements__wrap")
                div(class="formElements__column ")
                    div(class="formElements__item")
                        // образец комментария
                        h3(class="formElements__text") Text Field
                        span(class="formElements__text formElements__text_desc") Default
                        +textField("big","text","Email")
                    div(class="formElements__item")
                        h3(class="formElements__text") Text Field
                        span(class="formElements__text formElements__text_desc") Hover / Focus
                        +textField("big","text","This is pretty awesome","hover")
                    div(class="formElements__item")
                        h3(class="formElements__text") Dropdown
                        span(class="formElements__text formElements__text_desc") Default
                        +select-item("","big","Сколько гостей","guest")
                    div(class="formElements__item")
                        //на самом деле тут будет select-item_masked
                        //с поведением выпадания календаря -?!
                        h3(class="formElements__text") masked text field
                        span(class="formElements__text formElements__text_desc") Default
                    div(class="formElements__item")
                        +textField("big","text","ДД.ММ.ГГГГ")
                         // h3(class="formElements__text") Dropdown
                    div(class="formElements__item")
                         +select-item("date Dropdown","small","ДД.MM.ГГГГ","date")
                         // h3(class="formElements__text") Dropdown
                    div(class="formElements__item")
                        +select-item("date Dropdown","small","19.08.2019","date")
                    div(class="formElements__item")
                        +select-item("filter date dropdown","medium","19 авг - 23 авг","date")
                    div(class="formElements__item")
                        h3(class="formElements__text") subscription text field
                        +textField("medium","text","Email")
